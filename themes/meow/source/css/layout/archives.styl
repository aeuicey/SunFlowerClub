.archive-year-title a, .archive-month-title a
  color: var(--font-color)
  &:hover
    color: var(--theme-color)

.archive-year
  margin-bottom: 2.5rem

.archive-year-title
  padding: .5rem 0
  margin-bottom: 1.8rem
  border-bottom: 1px solid transparent
  border-image: linear-gradient(to right, var(--font-color-light-2), rgba(0,0,0,0)) 1
  a
    font-size: 1.8rem
    font-weight: bold
    margin-right: .8rem
  span
    font-size: .9rem
    color: var(--font-color-light-1)

.archive-month
  margin-bottom: 2rem

.archive-month-title
  margin-bottom: 1.3rem
  a
    font-size: 1.5rem
    font-weight: bold
    margin-right: .7rem
  span
    font-size: .9rem
    color: var(--font-color-light-1)

.archive-posts-list
  display: flex
  align-items: center
  justify-content: space-between
  flex-wrap: wrap
  gap: 1.2rem 1rem
  user-select: none

.archive-post
  width: calc(50% - .5rem)
  height: 5rem
  border-radius: .6rem
  border: 1px solid var(--card-border-color)
  position: relative
  overflow: hidden
  a
    display: block
    width: 100%
    height: 100%
    padding: 1rem 1.2rem
    color: var(--font-color)
  &:hover
    box-shadow: var(--meow-box-shadow)
  if hexo-config('archive.icon')
    &[archive-style="normal"]:after
      content: ""
      background-image: url(url-for(hexo-config('archive.icon')))
      background-size: cover
      position: absolute
      top: .5rem
      right: .5rem
      width: 13%
      height: 85%
      opacity: .8
      transition: all .5s ease
    &[archive-style="normal"]:hover:after
      transform: rotate(18deg)
      opacity: 1
  &[archive-style="cover"]
    &:hover
      .archive-post-cover
        transform: translateY(-25%)
        &:after
          width: 0
      .archive-post-title, .archive-post-date
        opacity: 0
    .archive-post-title
      width: 100%
    .archive-post-cover
      position: absolute
      width: 100%
      top: 0
      transform: translateY(-45%)
      left: 0
      z-index: -1
      transition: transform .5s ease
      img
        width: 100%
        height: 100%
        object-fit: cover
      &:after
        content: ""
        position: absolute
        top: 0
        right: 0
        width: 100%
        height: 100%
        background-color: var(--background-color-transparent-1)
        transition: width .6s ease
  &[archive-style="normal"]
    &:hover
      .archive-post-cover
        width: 100%
      .archive-post-title
        color: var(--link-hover-font-color)
        white-space: normal
        font-size: 1.25rem
        text-shadow: var(--meow-text-shadow-light)
        max-height: 2.85rem
      .archive-post-date
        display: none
    .archive-post-title
      width: 85%
    .archive-post-cover
      position: absolute
      width: 0
      height: 100%
      top: 0
      left: 0
      z-index: -1
      background-color: var(--theme-color-light-3)
      transition: width .6s ease

.archive-post-title
  font-size: 1.2rem
  font-weight: bold
  white-space: nowrap
  text-overflow: ellipsis
  overflow: hidden
  margin-bottom: .3rem
  transition: all .3s ease
  display: inline-flex
  align-items: center
  gap: .2rem

.archive-post-encrypt
  display: inline-flex
  align-items: center
  .icon
    height: 1.1rem

.archive-post-date
  color: var(--font-color-light-1)
  font-size: .9rem
  white-space: nowrap
  overflow: hidden
  transition: all .3s ease

+meow-smallscreen()
  .archive-year-title
    margin-bottom: 1.2rem
    a
      font-size: 1.35rem
    span
      font-size: .85rem
  
  .archive-month-title
    margin-bottom: 1rem
    a
      font-size: 1.2rem
    span
      font-size: .85rem
  
  .archive-post
    width: 100%
    a
      padding: .9em .85em
    if hexo-config('archive.icon')
      &[archive-style="normal"]
        &:after
          opacity: .35
          height: 80%
        .archive-post-title
          width: 90%
        &:hover
          .archive-post-title
            font-size: 1.1em
  
  .archive-post-title
    font-size: 1.1em
  
  .archive-post-date
    font-size: .95em