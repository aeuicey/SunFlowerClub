.category-container
  width: 85%
  min-height: 80px
  margin: 0 auto
  position: relative
  user-select: none
  if hexo-config('category.icon')
    &:after
      content: ""
      background-image: url(url-for(hexo-config('category.icon')))
      background-size: cover
      position: absolute
      bottom: 0
      right: 0
      width: 100px
      height: 100px
      opacity: .7
      animation: run-bounce 1.5s linear infinite alternate
      z-index: -1

.categories-list
  padding: 0
  display: flex
  flex-direction: column
  gap: .5rem
  a
    color: var(--font-color)
    display: inline-block
    max-width: 80%
    white-space: nowrap
    text-overflow: ellipsis
    overflow: hidden
    transition: all .3s ease
    &:hover
      color: var(--theme-color)
      &:before
        content: '> '
  li
    list-style: none
  >li
    padding: .5rem 1.3rem
    >a
      font-size: 1.3rem
      font-weight: bold
  span
    color: var(--font-color-light-2)
    margin-left: .5rem
    vertical-align: super
    font-size: .9rem

.categories-list-child
  padding-left: 1.3rem
  margin: .6rem 0 0 .3rem
  border-left: 1px solid var(--card-border-color)
  a
    font-size: 1.15rem
  li
    margin-top: .6rem

+meow-smallscreen()
  .category-container
    width: 100%
    margin: 0
    if hexo-config('category.icon')
      &:after
        display: none

  .categories-list
    gap: 0
    >li
      padding: .3rem .5rem
      >a
        font-size: 1.2em
    span
      font-size: .85rem
  
  .categories-list-child a
    font-size: 1.1em