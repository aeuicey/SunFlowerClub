header
  position: fixed
  top: 0
  left: 0
  z-index: $z-index-9
  width: 100%
  height: var(--meow-navbar-height)
  background-color: var(--nav-background-color)
  backdrop-filter: blur(8px)
  box-shadow: var(--meow-box-shadow)
  transition: background .45s ease-in-out

#navbar
  width: 100%
  max-width: var(--meow-main-width)
  height: 100%
  margin: 0 auto
  display: flex
  justify-content: space-between
  align-items: center
  text-align: center
  user-select: none
  a
    text-decoration: none

#nav-info
  margin: 0 1rem
  cursor: pointer
  display: flex
  align-items: center
  gap: 0.1rem

#site-icon
  display: flex
  align-items: center
  img
    height: 2rem
    &:hover
      animation fade 1s ease infinite

#site-name
  padding: .25rem .4rem .1rem
  border-radius: 10px
  transition: all .6s ease
  display: flex
  justify-content: center
  align-items: center
  h1,div
    margin: 0
    font-size: 1.6rem
    font-family: var(--meow-font-title)
    font-weight: bold
    color: var(--font-color-navbar)
  .icon
    position: absolute
    height: 1.4rem
    opacity: 0
  &:hover
    background-color: var(--theme-color)
    h1,div
      opacity: 0
    .icon
      opacity: 1

#nav-menu
  font-size: 1.3rem
  display: flex
  align-items: center
  position: absolute
  left: 50%
  transform: translateX(-50%)

.menu-item
  border-radius: 10px
  position: relative
  display: flex
  flex-direction: column
  align-items: center
  justify-content: center
  gap: .8rem
  transition: all .5s ease
  &:after
    position: absolute
    top: 1.7rem
    left: 0
    width: 100%
    height: 1rem
    content: ''
  a
    padding: .2rem 1rem
    color: var(--font-color-navbar)
    display: flex
    align-items: center
    gap: .3rem
  .icon
    height: 1.25rem
  &:hover
    background-color: var(--theme-color)
    >a
      color: var(--link-hover-font-color)
      .icon
        animation fade 1s ease infinite
    .sub-menu-item
      opacity: 1
      max-height: 12rem

.sub-menu-item
  position: absolute
  opacity: 0
  max-height: 0
  width: max-content
  top: 2rem
  margin: .3rem 0 0
  border-radius: 12px
  border: 1px solid var(--theme-color)
  box-shadow: var(--meow-box-shadow)
  background-color: var(--background-color)
  padding: .3rem .3rem
  display: flex
  flex-direction: column
  justify-content: center
  align-items: center
  gap: .1rem
  overflow: hidden
  text-align center
  transition: all .3s ease
  li
    list-style none
    border-radius: 8px
    &:hover
      background-color: var(--theme-color)
      a
        color: var(--link-hover-font-color)
  a
    padding: .2rem 1.1rem

#nav-function
  margin: 0 1rem
  font-size: 1.3rem
  display: flex
  align-items: center
  gap: .8rem
  div
    cursor: pointer
    a
      display: flex
      align-items: center
      gap: .3rem
      color: var(--font-color-navbar)
  .icon
    height: 1.25rem

#search-btn
  span
    background-color: var(--background-color-grey-transparent)
    border-radius: 10px
    padding: .2rem 1.3rem
  &:hover
    >a
      color: var(--link-hover-font-color)
    span
      background-color: var(--theme-color-transparent-1)
    .icon
      animation fade 1s ease infinite

#menu-btn
    display: none
    &:hover img
      transform: rotate(360deg)
      transition: transform 1s ease

#menu-aside
  user-select: none
  visibility: hidden
  position: fixed
  top: 0
  left: 0
  width: 100%
  height: 100%
  z-index: $z-index-10
  background: transparent
  backdrop-filter: blur(0)
  transition: all .4s ease-in
  hr
    margin: 1.5rem 0 0 0

#menu-aside-container
  position: absolute
  width: 80%
  max-width: 400px
  height: 100%
  top: 0
  left: 0
  background: var(--background-color-transparent-1)
  box-shadow: var(--meow-box-shadow)
  display: flex
  flex-direction: column
  gap: 1rem
  padding: 2rem 1.5rem
  overflow-y: auto
  transform: translateX(-100%)
  transition: all .4s ease-in

.menu-aside-item
  font-size: 1.05rem
  a
    color: var(--font-color-navbar)
    display: flex
    align-items: center
    gap: .3rem
  .icon
    height: 1.1rem

.menu-aside-sub-item
  display: flex
  flex-wrap: wrap
  gap: .5rem .8rem
  padding: 0
  overflow: hidden
  text-align center
  transition: all .3s ease
  li
    list-style: none
    width: calc(50% - .4rem)
    a
      padding: .35rem .8rem
      border-radius: .5rem
      border: 1px solid var(--card-border-color)
      justify-content: center
      &:hover
        background: var(--theme-color)
        color: var(--link-hover-font-color)

#menu-aside-info
  display: flex
  align-items: center
  gap: 0.3rem
  font-size: 1.6rem
  font-family: var(--meow-font-title)
  font-weight: bold
  padding-bottom: .6rem
  border-bottom: 1px solid var(--card-border-color)
  margin-bottom: .6rem
  img
    height: 1.8rem

+meow-smallscreen()
  #menu-btn
    display: block
    opacity: .7
  #search-btn span
    display: none
    opacity: .7
  #site-name
    h1,div
      font-size: 1.5rem
  #nav-menu
    display: none
  #menu-aside
    &[open]
      visibility: visible
      background: var(--background-color-transparent-2)
      backdrop-filter: blur(.3rem)
      #menu-aside-container
        transform: translateX(0)