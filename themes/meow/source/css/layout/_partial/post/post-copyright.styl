.post-copyright
  width: 100%
  border: 1px dotted var(--font-color-light-2)
  border-radius: .8rem
  padding: 1.3rem 1.2rem
  margin: 2rem 0
  position: relative
  user-select: none
  overflow: hidden
  div:not(:nth-child(1))
    margin-top: .7rem
  a
    color: var(--font-color-light-2)
    &:hover
      color: var(--theme-color)

.post-copyright-link
  button
    margin-left: .5rem
    padding: 0 .35rem
    border-radius: .3rem
    height: 1.3rem
    font-size: .8rem
    color: var(--link-hover-font-color)
    background: var(--theme-color-light-2)
    &:hover
      color: var(--font-color)
    svg
      height: .75rem
      animation: show-ease .3s ease

.post-copyright-icon
  position: absolute
  top: 50%
  right: 1.2rem
  transform: translateY(-50%) rotate(346deg)
  height: 180%
  opacity: .2

+meow-smallscreen()
  .post-copyright-icon
    display: none
  
  .post-copyright
    margin: 1rem 0