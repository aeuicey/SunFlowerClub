*
  box-sizing: border-box
  scroll-behavior: smooth
  user-select: hexo-config('global.selectable') ? auto : none

  ::-webkit-scrollbar
    width: .65rem
    height: .65rem

  ::-webkit-scrollbar-thumb
    background-color: var(--background-color-grey)
    border-radius: 10px

  ::-webkit-scrollbar-thumb:hover
    background-color: var(--theme-color-light-1)

  ::-webkit-scrollbar-thumb:active
    background-color: var(--theme-color-light-1)

  ::-webkit-scrollbar-track
    background-color: var(--background-color-grey-transparent)

  @-moz-document url-prefix()
    scrollbar-color: var(--background-color-grey) var(--background-color-grey-transparent)
    scrollbar-width: thin
  
  ::selection
    background: var(--theme-color)
    color: var(--font-color-invert)

body
  width: 100%
  height: max-content
  min-height: 100vh
  margin: 0
  background-color: var(--background-color-body)
  color: var(--font-color)
  font-size: $font-size-default
  font-family: var(--meow-font-default)
  line-height: $meow-line-height
  +meow-smallscreen()
    font-size: $font-size-default-smallscreen

body[bg-style='fixed']
  &:before
    content: ' '
    position: fixed
    top: 0
    left: 0
    width: 100vw
    height: 100vh
    z-index: -1
    background-image: var(--banner-background)
    background-size: cover
    background-position: unquote(hexo-config('banner.image.position'))
    background-repeat: unquote(hexo-config('banner.image.repeat'))
    animation: show-ease .3s ease-in
    transition: background-image .3s ease-in, filter .3s ease-in
    // background-attachment: fixed
  &[blur]:before
    filter: blur(.5rem)

main
  width: 100%
  height: max-content

a
  text-decoration: none
  color: var(--theme-color)

ul, ol
  padding-left: 2rem
  margin: 1.5rem 0
  ul, ol
    margin: 0

ul:has(input[type='checkbox'])
  padding-left: 0
  li
    display: flex
    align-items: center
    gap: .5rem

ul li input[type='checkbox']:disabled
  appearance: none
  width: 1.6em
  height: 1.5em
  border-radius: .3rem
  margin: 0
  background-color: var(--background-color-grey-light-1)
  &:checked
    background-color: var(--theme-color)
    &:after
      content: 'âœ“'
      display: inline-block
      width: 100%
      height: 100%
      color: var(--font-color-invert)
      font-weight: bold
      text-align: center

blockquote
  margin: 2rem 0
  padding: .2rem .9rem
  border-left: .5rem solid var(--font-color-light-3)
  background-color: var(--background-color-grey-transparent)
  border-radius: .25rem
  box-shadow: var(--meow-box-shadow)
  line-height: 1.5

h1
  font-size: $font-size-title-1

h2
  font-size: $font-size-title-2

h3
  font-size: $font-size-title-3

h4
  font-size: $font-size-title-4

h5
  font-size: $font-size-title-5

h6
  font-size: $font-size-title-6

h1,h2,h3,h4,h5,h6
  margin: 2.45em  0 1.35em

hr
  margin: 3rem 0
  border: 2px dashed var(--background-color-grey)
  position: relative
  overflow: visible
  if hexo-config('markdown.hr_icon')
    &:before
      content: hexo-config('markdown.hr_icon')
      position: absolute
      top: -.5rem
      left: 5%
      font-size: 1rem
      line-height: 1rem
      color: var(--background-color-grey)
      z-index: $z-index-1
      opacity: .7
      transition: all 1s ease-in-out
    &:hover:before
      left: 90%

p
  text-align: justify
  vertical-align: baseline

mark
  background-color: var(--theme-color)
  color: var(--font-color-invert)
  padding: 0 .3rem
  border-radius: .3rem

ins
  text-decoration-color: var(--font-color-light-2)

s
  color: var(--font-color-light-1)

abbr
  text-decoration-color: var(--font-color-light-2)

kbd
  padding: .1em .4rem
  margin: 0 .12rem
  border: 1px solid var(--background-color-grey)
  border-radius: .4rem
  background-color: var(--background-color-grey-light-1)
  font-family: var(--meow-font-default)
  font-size: .9em

.table-container
  width: 100%
  overflow-x: auto
  margin: 2rem 0

table
  border-radius: .8rem
  border-collapse: collapse;
  width: 100%
  overflow: hidden
  box-shadow: var(--meow-box-shadow)
  ul, ol
    line-height: normal
    margin: 0

th, td
  padding: .5rem .8rem
  border: 1px solid var(--background-color-grey)

thead
  background-color: var(--background-color-grey-light-2)
  white-space: nowrap

button
    background: transparent
    border: 0
    padding: 0
    cursor: pointer
    font-family: var(--meow-font-default)
    color: var(--font-color)
    font-size: 1rem

textarea, input
  font-family: var(--meow-font-default)